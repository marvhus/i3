# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        font pango:Hack 12
        
        status_command ~/.config/bumblebee-status/bumblebee-status \
            -m disk cpu2 memory battery date time \
               pasink pasource \
            -p date.format="%d %B %Y - %A" \
			   time.format="%H:%M:%S" \
			   cpu2.layout="cpu2.cpuload cpu2.coresload cpu2.temp" \
			   cpu2.temp_pattern="temp1_input" \
			   cpu2.colored="1" \
			   disk.format="{left} ({percent:05.02f}%)" \
			   memory.format="{used} ({percent:05.02f}%)" \
            -t solarized-powerline 

        position top

        # strip_workspace_numbers yes

        colors {

            background #001a25
            statusline #ffffff
            separator  #666666

            #                  border, BG,     text
            focused_workspace  #93a1a1 #93a1a1 #ffffff 
            active_workspace   #93a1a1 #93a1a1 #ffffff
            inactive_workspace #ABB2BF #002b36 #ffffff
            urgent_workspace   #2f343a #900000 #ffffff
            binding_mode       #2f343a #900000 #ffffff


        }
}

